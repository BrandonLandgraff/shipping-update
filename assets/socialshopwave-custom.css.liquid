.ssw-reward-tab-closed.ssw-reward-tab-rounded {
  bottom: 170px;
}

@media only screen 
  and (min-device-width: 700px) 
  and (max-device-width: 1024px) 
  and (-webkit-min-device-pixel-ratio: 2) {
    .ssw-reward-tab.ssw-reward-side-tab.ssw-reward-side-tab-left {
      display: none;
    }
}

@media only screen and (max-device-width: 699px)  {
  .ssw-reward-tab.ssw-reward-side-tab.ssw-reward-side-tab-left {
    display: none;
  }
}

.ssw-reward-tab-opened.ssw-reward-tab-rounded.ssw-active {
  display: none;
}
button.ssw-pull-left:hover, button.ssw-reward-box-quest-learn-more.ssw-pull-right:hover {
  color: var(--button-color-hover);
  background-color: var(--button-background-hover);
  border-color: var(--button-background-hover);
  border-radius: 15px;
}
.ssw-reward-box {
  border-radius: 15px;
  z-index: 1999;  
}

.ssw-reward-box-quest-btns button {
  border-radius: 15px;
}

.gw-container .ssw-reward-btn {
  border-radius: 5px;
}

.ssw-reward-tab {
  z-index: 1999;
}



















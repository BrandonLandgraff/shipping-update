 <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM fully loaded and parsed');

            // Находим элемент ссылки
            var reviewLink = document.querySelector('.lipscore-rating-review-link');
            console.log('Review link:', reviewLink);

            // Проверяем, что элемент существует
            if (reviewLink) {
                // Добавляем обработчик события click на элемент ссылки
                reviewLink.addEventListener('click', function(event) {
                    console.log('Review link clicked');
                    event.preventDefault(); // Предотвращаем стандартное действие по клику

                    // Находим третий элемент с классом m-tab-header
                    var tabHeaders = document.querySelectorAll('.m-tab-header');
                    console.log('Tab headers:', tabHeaders);

                    if (tabHeaders.length >= 3) {
                        var thirdTabHeader = tabHeaders[2];
                        console.log('Third tab header before adding class:', thirdTabHeader);

                        thirdTabHeader.classList.add('active'); // Добавляем класс active

                        console.log('Third tab header after adding class:', thirdTabHeader);

                        // Используем MutationObserver для отслеживания изменения класса
                        var observer = new MutationObserver(function(mutations) {
                            mutations.forEach(function(mutation) {
                                console.log('Mutation observed:', mutation);
                                if (mutation.attributeName === 'class' && thirdTabHeader.classList.contains('active')) {
                                    console.log('Class "active" added to third tab header');
                                    // Повторно выполняем клик на элементе ссылки
                                    reviewLink.click();
                                    console.log('Review link clicked again');
                                    // Останавливаем наблюдение после выполнения клика
                                    observer.disconnect();
                                }
                            });
                        });

                        // Настраиваем наблюдатель для отслеживания изменений атрибутов
                        observer.observe(thirdTabHeader, { attributes: true });
                    } else {
                        console.log('Not enough tab headers found');
                    }
                });
            } else {
                console.log('Review link not found');
            }
        });
</script>



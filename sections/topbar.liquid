                  show_snapchat: block.settings.show_snapchat,
                  show_tumblr: block.settings.show_tumblr,
                  show_youtube: block.settings.show_youtube,
                  show_vimeo: block.settings.show_vimeo,
                  show_tiktok: block.settings.show_tiktok,

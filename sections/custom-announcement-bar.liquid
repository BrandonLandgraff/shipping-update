<!-- /sections/flexi-announcement-bar.liquid -->
<!-- Brandon Landgraff - Flexi Studio -->

{%- liquid
  assign sectionid = section.id

  assign bg_color = section.settings.bg_color
  assign width = section.settings.width
  assign cards_width = section.settings.cards_width
  assign center = section.settings.center
  assign stack = section.settings.stack
  assign display_options = section.settings.display_options

  assign padding_top = section.settings.padding_top
  assign padding_bottom  = section.settings.padding_bottom 
  assign mobile_top_padding = section.settings.padding_top | times: 0.6 | round
  assign mobile_bottom_padding = section.settings.padding_bottom | times: 0.6 | round
-%}

{%- style -%}
  /* SECTION STYLES */
  .flexi-announcement-bar--{{ sectionid }} {
      background-color: {{ bg_color }};
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-right: 2em;
      padding-left: 2em;
  }

  @media only screen and (max-width: 1024px) {
      .flexi-announcement-bar--{{ sectionid }} {
          padding-top: {{ mobile_top_padding }}px;
          padding-bottom: {{ mobile_bottom_padding }}px;
          padding-right: 2em;
          padding-left: 2em;
      }
  }

  .flexi-blocks-wrapper--{{ sectionid }} {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: auto;
      max-width: {{ width }}px;
  }

  .flexi-blocks--{{ sectionid }} {
      display: grid;
      grid-template-columns: 1fr;
      justify-content: center;
      height: 100%;
      width: 100%;
  }

  @media (min-width: 1024px) {
    .flexi-announcement-bar-grid-{{ section.id }} {
        display: flex !important;
        justify-content: center !important;
        gap: 24px !important;
        width: 100% !important;
        max-width: {{ cards_width }}px !important;
        margin: {{ center }} !important;
    }
    .swiper-slide-card-container-{{ sectionid }} {
      width: fit-content;
      margin-right: 0px;
    }
  }

  @media (max-width: 1024px) {
    .swiper {
      display: block;
      width: 100%;
      height: 100%;
      margin: 0 auto;
    }
    .swiper-wrapper {
      align-items: center;
      width: 100%;
    }
    .swiper-{{ sectionid }} {
      max-width: 100%;
      width: 100%;
      margin: 0px !important;
      overflow: hidden;
    }
    .swiper-slide-card-container-{{ sectionid }} {
      display: flex;
      justify-content: center;
      align-items: center;
      max-width: 100% !important;
      height: auto !important;
      border-radius: {{ borderRadius }}px;
    }
    .swiper-slide {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
    }
  }

  {% if stack == "stack" %}
  @media only screen and (max-width: 1024px) {
      .flexi-why-grid-{{ section.id }} {
          display: grid !important;
          grid-template-columns: 1fr;
          gap: 12px;
          width: 100%;
      }
  }
  {% endif %}

  .swiper:not(.swiper-initialized) .swiper-slide {
    width: fit-content;
  }

  /* CUSTOM RULE  */
  @media (min-width: 1024px) and (max-width: 1200px) {
    .swiper-slide:nth-child(4) {
      display: none;
    }
  }

  .swiper-button-next, .swiper-button-prev {
    width: var(--m-button-size) !important;
  }

  .swiper-button-next svg, .swiper-button-prev svg {
    width: 16px;
    height: 16px;
  }

  .swiper-pagination {
    display: none !important;
  }
{%- endstyle -%}


<section
  class="flexi-announcement-bar flexi-announcement-bar--{{ sectionid }}"
>

  <div class="flexi-blocks-wrapper--{{ sectionid }}">
    <div class="flexi-blocks--{{ sectionid }}">

      <div
        class="swiper swiper-{{ sectionid }} swiper-container flexi-blocks-container--{{ sectionid }}"
        style="margin: 0px;"
      >
        <div class="swiper-wrapper flexi-announcement-bar-grid-{{ section.id }}">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'flexi-announcement-bar' %}
                <div class="swiper-slide swiper-slide-card-container-{{ sectionid }}" {{ block.shopify_attributes }}>
                  {% render 'flexi-announcement-bar-card', block: block %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  var swiper;

  function initSwiper() {
    var screenWidth = window.innerWidth;

    if (screenWidth < 1024) {
      if (!swiper) {
        swiper = new Swiper('.swiper-{{ sectionid }}', {
          slidesPerView: 'auto',
          spaceBetween: 12,
          grabCursor: true,
          loop: true,
          autoplay: {
            delay: 2500,
            disableOnInteraction: false,
          },
          breakpoints: {
            1024: {
              spaceBetween: 12,
            },
          },
        });
      }
    } else {
      if (swiper) {
        swiper.destroy(true, true);  // Destroy Swiper instance on desktop
        swiper = undefined;
      }
    }
  }

  // Initialize Swiper on page load
  initSwiper();

  // Reinitialize Swiper on window resize
  window.addEventListener('resize', initSwiper);
</script>


